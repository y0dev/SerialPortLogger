<Application x:Class="SerialLogAnalyzer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SerialLogAnalyzer"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Themes/LightTheme.xaml"/>
				<ResourceDictionary Source="Themes/ButtonStyles.xaml"/>
				<ResourceDictionary Source="Themes/ComboBoxStyles.xaml"/>
				<ResourceDictionary Source="Themes/CheckboxStyles.xaml"/>
				<ResourceDictionary Source="Themes/LabelStyles.xaml"/>
				<ResourceDictionary Source="Themes/ListviewStyles.xaml"/>
				<ResourceDictionary Source="Themes/TabItemStyles.xaml"/>
				<ResourceDictionary Source="Themes/TextboxStyles.xaml"/>
			</ResourceDictionary.MergedDictionaries>

			<!-- Global Font Resources -->
			<FontFamily x:Key="ApplicationFontFamily">Segoe UI</FontFamily>
			<!-- Default Font Family -->
			<System:Double x:Key="ApplicationFontSize">12</System:Double>
			<!-- Default Font Size using System:Double -->
		</ResourceDictionary>

	</Application.Resources>
</Application>
