<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<SolidColorBrush x:Key="WindowBackgroundColor">#F5F5F5</SolidColorBrush>
	<Color x:Key="PrimaryColor">#FFFFFF</Color>
	<!-- White for Light Theme -->
	<Color x:Key="SecondaryColor">#000000</Color>
	<!-- Black for Light Theme -->
	<Color x:Key="AccentColor">#FF4081</Color>

	<SolidColorBrush x:Key="ButtonBaseColor">#4080FF</SolidColorBrush>
	<SolidColorBrush x:Key="ButtonMouseOverColor">#66A3FF</SolidColorBrush>
	<SolidColorBrush x:Key="ButtonPressedColor">#005BB5</SolidColorBrush>

	<SolidColorBrush x:Key="ButtonDisabledColor">#FFCCCC</SolidColorBrush>
	<!-- Light grey for disabled button -->
	<SolidColorBrush x:Key="DisabledTextColor">#FF9999</SolidColorBrush>
	<!-- Darker grey for disabled text -->

	<SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource PrimaryColor}"/>
	<SolidColorBrush x:Key="ForegroundBrush" Color="Black"/>
	<SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>

	<!-- Define colors for the checkbox -->
	<SolidColorBrush x:Key="CheckboxBorderColor">#D1D5DB</SolidColorBrush>
	<!-- Gray-400 -->
	<SolidColorBrush x:Key="CheckboxCheckedColor">#2563EB</SolidColorBrush>
	<!-- Blue-600 -->
	<SolidColorBrush x:Key="CheckboxBackgroundColor">#FFFFFF</SolidColorBrush>
	<!-- White -->
	<SolidColorBrush x:Key="CheckboxHoverBorderColor">#60A5FA</SolidColorBrush>
	<!-- Blue-400 -->

	<SolidColorBrush x:Key="TabItemBackground" Color="#F9FAFB"/>
	<!-- Light background -->
	<SolidColorBrush x:Key="TabItemSelectedBackground" Color="#FFFFFF"/>
	<!-- White for selected tab -->
	<SolidColorBrush x:Key="TabItemHoverBackground" Color="#F3F4F6"/>
	<!-- Light hover color -->
	<SolidColorBrush x:Key="TabItemBorderColor" Color="#E5E7EB"/>
	<!-- Light border -->
	<SolidColorBrush x:Key="TabItemSelectedBorderColor" Color="#3B82F6"/>
	<!-- Blue for selected border -->
	<SolidColorBrush x:Key="TabItemForeground" Color="#1F2937"/>
	<!-- Dark text -->
	<SolidColorBrush x:Key="TabItemHoverForeground" Color="#111827"/>
	<!-- Darker text on hover -->
	<SolidColorBrush x:Key="TabItemDisabledForeground" Color="#9CA3AF"/>
	<!-- Grey text when disabled -->

	<!-- Add more styles and resources -->
</ResourceDictionary>
